#!/usr/bin/env ruby

require 'clouder'
if ARGV.first == 'init'
	Clouder.init
elsif ARGV.first == 'run'
	if File.exists? 'Cloudfile'
		File.open 'Cloudfile', 'r' do |f|
			config = f.read
			eval config
		end
		
		Clouder.run
	else
		puts "It doesn't like this is a cloud project. Try running 'cloud init'"
	end
else
	puts "Usage: cloud [command]"
	puts "  commands:"
	puts "    init -- create a new clouder project"
	puts "    run -- run a cloud project"
end
