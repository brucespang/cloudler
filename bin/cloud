#!/usr/bin/env ruby

require 'cloudler'
if ARGV.first == 'init'
	Cloudler.init
elsif ARGV.first == 'run'
	if File.exists? 'Cloudfile'
		Cloudler.run
	else
		puts "It doesn't like this is a cloud project. Try running 'cloud init'"
	end
else
	puts "Usage: cloud [command]"
	puts "  commands:"
	puts "    init -- create a new cloudler project"
	puts "    run -- run a cloud project"
end
